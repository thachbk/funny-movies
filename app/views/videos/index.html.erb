<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 px-0">
      <% @videos.each do |video| %>
        <div class="card mb-3 border-0">
          <div class="row g-0">
            <div class="col-md-6">
              <iframe width="100%" height="258" src="<%= video.url %> title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen>
              </iframe>

              <%# <img src="..." class="img-fluid rounded-start" alt="..."> %>
            </div>
            <div class="col-md-6">
              <div class="card-body pt-0">
                <h5 class="card-title text-danger"><%= video.title %></h5>
                <div class="card-text">
                  <div class="text-body-secondary">Shared by: <%= video.user.email %></div>
                  <div class="text-body-secondary">Description:</div>
                  <div class="text-dark"><%= truncate_description(video.description, length: 250) %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>