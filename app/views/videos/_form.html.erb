<%= form_with model: video do |form| %>
  <div class="mb-3 row">
    <%= form.label :url, 'Youtube url', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :url, class: 'form-control' %>
    </div>
  </div>

  <div class='mb-3 row'>
    <div class="col-sm-2"></div>
    <div class="col-sm-10 d-grid">
      <%= form.submit 'Share', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
